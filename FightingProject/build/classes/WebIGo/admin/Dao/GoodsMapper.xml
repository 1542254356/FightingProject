<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="WebIGo.admin.Dao.GoodsMapper"  >
    <!-- 添加纪录 -->
	<insert id="addGoods" parameterType="WebIGo.admin.Bean.Goods">
	  insert into goodsinfo (Gname,Gimgurl,Gdiscount,Gamount)
	  values (#{Gname},#{Gimgurl},#{Gdiscount},#{Gamount})
	</insert>
    <!-- 查找所有 -->
    <select id="listGoodsofType" parameterType="WebIGo.admin.Bean.Goods" resultType="WebIGo.admin.Bean.Goods">
        select * from goodsinfo
    </select>
</mapper>